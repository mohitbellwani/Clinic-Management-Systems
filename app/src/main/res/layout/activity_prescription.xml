<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".application.PrescriptionActivity">

    <de.codecrafters.tableview.TableView
        android:id="@+id/presview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/New"
        app:layout_constraintVertical_bias="0.0">

    </de.codecrafters.tableview.TableView>

    <Button
        android:id="@+id/predetpg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW_TODAY"
        app:layout_constraintBottom_toTopOf="@+id/presview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>